{
  "appId": "com.pulse.ide",
  "productName": "Pulse",
  "directories": {
    "buildResources": "build",
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*"
  ],
  "extraResources": [
    {
      "from": "../backend-dist",
      "to": "backend",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "../assets",
      "to": "assets",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "../assets/pulse_icon_bg_020321.ico",
    "artifactName": "Pulse-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": "always",
    "createStartMenuShortcut": true,
    "shortcutName": "Pulse",
    "uninstallDisplayName": "Pulse IDE",
    "installerIcon": "../assets/pulse_icon_bg_020321.ico",
    "uninstallerIcon": "../assets/pulse_icon_bg_020321.ico",
    "installerHeaderIcon": "../assets/pulse_icon_bg_020321.ico"
  },
  "extraMetadata": {
    "main": "dist-electron/main.js"
  }
}